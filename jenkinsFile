pipeline {
    agent any


    stages {

        stage('Test') {
            steps {
                   echo "hello world"
            }
        }
        

        stage('Build Docker Image') {
            steps {

                docker.build("test-image", "./dockerfiles/test")
            }
        }

        stage('Run Docker Container') {
            steps {
                   sh 'docker run -d --name my-container python-app'
                
            }
        }
    }
}
