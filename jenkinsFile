pipeline {
    agent any

    stages {


        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t python-app .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    
                    sh 'docker run -d --name my-container python-app'
                }
            }
        }
    }
}
