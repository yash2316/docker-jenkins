pipeline {
    agent { dockerfile true }

    stages {

        stage('Test') {
            steps {
                
                   echo "hello world"
                
            }
        }
        

        stage('Build Docker Image') {
            steps {
               
                    sh 'docker build -t python-app .'
            }
        }

        stage('Run Docker Container') {
            steps {
                
                    sh 'docker run -d --name my-container python-app'
                
            }
        }
    }
}
