pipeline {
    agent any

    stages {

        stage('Test') {
            steps {
                   echo "hello world"
            }
        }
        

        stage('Build Docker Image') {
            steps {
                    docker build -t python-app .
            }
        }

        stage('Run Docker Container') {
            steps {
                    docker run -d --name my-container python-app
                
            }
        }
    }
}
