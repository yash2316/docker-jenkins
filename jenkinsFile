pipeline {
    agent { dockerfile true }

    stages {

        stage('stage 1') {
            steps {
                script {
                    sh 'echo "hello world"'
                }
            }
        }
        

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t python-app .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    
                    sh 'docker run -d --name my-container python-app'
                }
            }
        }
    }
}
